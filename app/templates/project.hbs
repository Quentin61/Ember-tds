<div class="ui container">
  <div class="ui icon message">
    <i class="open folder icon"></i>
    <div class="content">
      <div class="header">
        model\stories
      </div>
      <p>Administration des stories</p>
    </div>
  </div>
  <LinkTo class="ui button orange"  @route="story.new" @model={{model.project.id}}>
    <i class="plus icon"></i> Ajouter une story
  </LinkTo>
  {{#each model.story as |story|}}
  <div class="ui icon message">
    <i class="file icon"></i>
    <div class="content">
      <div class="header">
        {{story.code}}
      </div>
      <p>{{story.detail}}</p>
      {{#each story.tags as |tag|}}
      <a class="item">
        <div class="ui {{tag.color}} horizontal label">{{tag.title}}</div>
      </a>
      {{/each}}
      <div class="right aligned">
        <div class="ui right labeled button" tabindex="0">
          <a class="ui basic right pointing label">
            {{story.developer.identity}}
          </a>
          <LinkTo class="ui button right" @route="story.edit" @model={{story.id}}>
            <i class="user icon"></i> Modifier
          </LinkTo>
        </div>
      </div>
    </div>
  </div>
    {{/each}}
</div>
{{outlet}}