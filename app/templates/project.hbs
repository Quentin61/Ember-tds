<div class="ui container">
  <div class="ui icon message">
    <i class="open folder icon"></i>
    <div class="content">
      <div class="header">
        model\stories
      </div>
      <p>Administration des stories</p>
    </div>
  </div>
  <LinkTo class="ui button orange"  @route="story.new" @model={{model.project}}>
    <i class="plus icon"></i> Ajouter une story
  </LinkTo>
  {{#each model.story as |story|}}
  <div class="ui icon message">
    <i class="file icon"></i>
    <div class="content">
      <div class="header">
        {{story.code}}
      </div>
      <p>{{story.detail}}</p>
    </div>
  </div>
    {{/each}}
</div>
{{outlet}}