<div class="ui container">
  <form class="ui form">
    <div class="field">
      <label>Nom</label>
      <Input type="text" @value={{model.project.name}} placeholder="Entrer votre nom"></Input>
    </div>
    <div class="field">
      <label>Description</label>
      <Textarea @value={{model.project.detail}} placeholder="Entrer une description"></Textarea>
    </div>
    <div class="field">
      <label>Date de d√©but</label>
      <Input type="date" @value={{model.project.startDate}}></Input>
    </div>
    <div class="field">
      <label>Date de fin</label>
      <Input type="date" @value={{model.project.dueDate}}></Input>
    </div>
    {{#ui-dropdown class="selection" selected=model.project.developer onChange=(action (mut model.project.developer))as |execute mapper|}}
      <div class="default text">Developer</div>
      <i class="dropdown icon"></i>
      <div class="menu">
        {{#each model.developer as |developer|}}
          <div data-value="{{map-value mapper developer}}" class="item">
            {{developer.identity}}
          </div>
        {{/each}}
      </div>
    {{/ui-dropdown}}<br>
    <Input type="hidden" @value={{model.project.stories}} value="[]"></Input>
    <div class="ui message">
      <div class="header">
        Ajout d'un projet
      </div>
      <p>Voulez-vous ajouter ce projet ?</p>
      <button class="ui button green" type="submit" {{action "new" model.project}}>Ajouter</button>
      <button class="ui button red" type="submit" {{action "cancel"}}>Annuler</button>
    </div>
  </form>
</div>
{{outlet}}